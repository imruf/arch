#!/usr/bin/env sh

ext="${1##*.}"
mpvFiles="mkv mp4 gif"
fehFiles="png jpg jpeg"
wgeFiles="mp3 flac opus ogg pdf"


if echo $fehFiles | grep -w $ext > /dev/null; then
    feh "$1" >/dev/null &
elif echo $mpvFiles | grep -w $ext > /dev/null; then
    mpv "$1" >/dev/null &
elif echo $wgetFiles | grep -w $ext > /dev/null; then
    wget "$1" >/dev/null &
else
    $BROWSER "$1" >/dev/null &
fi
