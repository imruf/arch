#!/bin/sh

# Feed script a url or file location.
# If an image, it will view in nsxiv,
# if a video or gif, it will view in mpv
# if a music file or pdf, it will download,
# otherwise it opens link in browser.

if [ -z "$1" ]; then
	url="$(xclip -o)"
else
	url="$1"
fi

case "$url" in
	*mkv|*webm|*mp4|*youtube.com/watch*|*youtube.com/playlist*|*youtube.com/shorts*|*youtu.be*|*hooktube.com*|*bitchute.com*|*videos.lukesmith.xyz*|*odysee.com*)
		setsid -f mpv --loop-file=inf -quiet "$url" >/dev/null 2>&1 ;;
	*png|*jpg|*jpe|*jpeg|*gif|*webp)
		curl -sL "$url" > "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")" && nsxiv -a "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")"  >/dev/null 2>&1 & ;;
	*pdf|*cbz|*cbr)
		curl -sL "$url" > "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")" && zathura "/tmp/$(echo "$url" | sed "s/.*\///;s/%20/ /g")"  >/dev/null 2>&1 & ;;
	*mp3|*flac|*opus|*mp3?source*)
		qndl "$url" 'curl -LO'  >/dev/null 2>&1 ;;
	*imgur.com*)
        yt-dlp -g "$1" | xargs mpv --profile=yt --loop-file=inf ;;
	*redgifs.com*)
        case $url in
	        https://redgifs.com*)
               mpv --ytdl-format='bestvideo*+bestaudio/best' $url ;; 
	        *)
                echo $url | sed 's/#.*//;s/v3/api/;s/www/api/;s/watch/v2\/gifs/;s/$/\/sd.m3u8/' | xargs mpv --profile=yt --loop-file=inf
        esac ;;
	*v.reddit.com*|*v.redd.it*)
        mpv --profile=yt --loop-file=inf --ytdl-format='bestvideo*+bestaudio/best' $url ;;
	*reddit.com/gallery*)
        tmpfile=/tmp/gallery
        linkfile=/tmp/links
        iurl=https://www.reddit.com/comments/$(basename $1).json
        rm /tmp/*.[jpg][pni]*
        curl $iurl > $tmpfile
        tr '"' '\n' < $tmpfile | awk '/https/ && /format/ && !/blur/ {print}' | sed 's/amp;//g' | sort -n > $linkfile
        [ -s $linkfile ] && aria2c -i $linkfile -d /tmp && nsxiv -f -a /tmp/. || cat $tmpfile; sleep 0.5 ;;
	*imgchest.com*)
        tmpfile=/tmp/gallery
        linkfile=/tmp/links
        rm /tmp/*.[jpg][pni]*
        curl $url | grep og:image | tr '"' '\n' | awk '/https/ {print}' > $linkfile
        [ -s $linkfile ] && aria2c -i $linkfile -d /tmp && nsxiv -f -a /tmp/. || cat $linkfile; sleep 0.5 ;;
	*)
		[ -f "$url" ] && setsid -f "$TERMINAL" -e "$EDITOR" "$url" >/dev/null 2>&1 || setsid -f "$BROWSER" "$url" >/dev/null 2>&1
esac
