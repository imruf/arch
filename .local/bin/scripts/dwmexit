#!/bin/sh
# power script for dwm

case "$1" in
    lock)
        slock
        ;;
    suspend)
        slock $(systemctl suspend-then-hibernate -i)
        ;;
    reboot)
        sudo -A reboot
        ;;
    shutdown)
        sudo -A shutdown -h now
        ;;
    *)
        echo "== missing or invalid argument ! =="
        echo "Try again with: lock | suspend | reboot | shutdown"
        exit 2
esac

exit 0
