#!/bin/sh

while getopts "adfghpPRu:r:" o; do case "${o}" in
		h) 	printf "ytp\\n -u: URL\\n -r: Resolution\\n -R: Record Stream\\n -p: Seek To Position\\n -P: Seek To Position And Record\\n -d: Download\\n -a: Audio Only\\n -f: Get Format\\n -h: Help\\n" && exit 1 ;;
        u) URL="${OPTARG}" ;;
        r) RES="${OPTARG}" ;;
        d) [ -z $URL ] && read -p "URL: " URL
           youtube-dl -F "$URL"
           read -p "Code: " RES
           MPVYT="${MPVYT-youtube-dl -f $RES $URL}" ;;
        f) [ -z $URL ] && read -p "URL: " URL
           youtube-dl -F "$URL"
           read -p "Code: " RES
           MPVYT="${MPVYT-mpv --ytdl-format=$RES $URL}" ;;
        R) [ -z $URL ] && read -p "URL: " URL
           read -p "l/m/s/h/k/?: " RES
           RES="$(printf $RES | sed 's/l/240/;s/m/360/;s/s/480/;s/h/720/;s/k/1080/')"
           MPVYT="${MPVYT-mpv --stream-record=1.ts --ytdl-format=\'bestvideo[height<=$RES]+bestaudio/best[height<=$RES]\' $URL}" ;;
        a) [ -z $URL ] && read -p "URL: " URL
           read -p "a/b/c/d/e/?: " RES
           RES="$(printf $RES | sed 's/a/139/;s/b/140/;s/c/249/;s/d/250/;s/e/251/')"
           MPVYT="${MPVYT-mpv --ytdl-format=$RES $URL}" ;;
        p) [ -z $URL ] && read -p "URL: " URL
           read -p "l/m/s/h/k/?: " RES
           read -p "HH:MM:SS: " POS
           RES="$(printf $RES | sed 's/l/240/;s/m/360/;s/s/480/;s/h/720/;s/k/1080/')"
           MPVYT="${MPVYT-mpv --start=$POS --ytdl-format=\'bestvideo[height<=$RES]+bestaudio/best[height<=$RES]\' $URL}" ;;
        P) [ -z $URL ] && read -p "URL: " URL
           read -p "l/m/s/h/k/?: " RES
           read -p "HH:MM:SS: " POS
           RES="$(printf $RES | sed 's/l/240/;s/m/360/;s/s/480/;s/h/720/;s/k/1080/')"
           MPVYT="${MPVYT-mpv --stream-record=1.ts --start=$POS --ytdl-format=\'bestvideo[height<=$RES]+bestaudio/best[height<=$RES]\' $URL}" ;;
# this -g is for redgif
        g) [ -z $URL ] && read -p "URL: " URL
           youtube-dl -g --no-warnings "$URL" | awk 'NR==2' | xsel
           RES="$(printf $(xsel -o))"
           MPVYT="${MPVYT-mpv $RES}" ;;
esac done

[ -z $URL ] && read -p "URL: " URL
[ -z $RES ] && read -p "l/m/s/h/k/?: " RES

RES="$(printf $RES | sed 's/l/240/;s/m/360/;s/s/480/;s/h/720/;s/k/1080/')"
MPVYT="${MPVYT-mpv --ytdl-format=\'bestvideo[height<=$RES]+bestaudio/best[height<=$RES]\' $URL}"

$MPVYT
