#!/bin/sh

# You can call this script like this:
# $ ./brightnessControl.sh up
# $ ./brightnessControl.sh down

# Script inspired by these wonderful people:
# https://github.com/dastorm/volume-notification-dunst/blob/master/volume.sh
# https://gist.github.com/sebastiencs/5d7227f388d93374cebdf72e783fbd6a

bicon="ðŸŒ“"

function send_bl {
  # Make the bar with the special character â”€ (it's not dash -)
  # https://en.wikipedia.org/wiki/Box-drawing_character
  # bar=$(seq -s "â”€" 0 $((brightness / 5)) | sed 's/[0-9]//g')
  bar=$(seq --separator="â”€" 0 "$(($light / 5))" | sed 's/[0-9]//g')
  # Send the notification
  # dunstify -r 5555 -u normal "$bicon $light $bar"
  notify-send -r 5555 -u normal "$bicon $light $bar"
}

case $1 in
  up)
    sudo brightnessctl s +5% > /dev/null; light=$(brightnessctl | awk '/Current/ {print $4}' | sed 's/[%()]//g')
    send_bl
    ;;
  down)
    # decrease the backlight by 5%
    sudo brightnessctl s 5%- > /dev/null; light=$(brightnessctl | awk '/Current/ {print $4}' | sed 's/[%()]//g')
    send_bl
    ;;
  off)
      xset dpms force off
      ;;
esac
