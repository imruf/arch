#!/usr/bin/env sh

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -n spf -g 110x18 -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer -i 5 ;;
	5) pamixer -d 5 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) == true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ $vol -gt 70 ]; then
	icon="ðŸ”Š"
elif [ $vol -lt 30 ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s %s" $icon "$vol%"
