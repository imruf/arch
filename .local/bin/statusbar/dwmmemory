#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "ðŸ§  Memory hogs" "$(ps axch -o cmd:15,%mem --sort=-%mem | head)" ;;
	2) setsid -f "$TERMINAL" -n spf -g 110x18 -e htop ;;
	3) notify-send "ðŸ§  Memory module" "\- Shows Memory Used/Total.
- Click to show memory hogs.
- Middle click to open htop." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

mem=$(free -h --kilo | awk '/^Mem:/ {print $3}')
#mem=$(free -h --kilo | awk '/^Mem:/ {print $3 "/" $2}')
icon="ïˆ³"
printf "%s %s" $icon "$mem"
