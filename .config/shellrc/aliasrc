#!/bin/sh

# vim to nvim
command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d"

# EDITOR
alias \
 v="$EDITOR" \
 q="exit" \

# Multiplexer/tmux
alias \
 t="tmux a || tmux" \
 ta="tmux a -t" \
 tl="tmux ls" \

## Files
# List
alias \
 ls="ls --color=auto --group-directories-first" \
 lah="exa -la --group-directories-first" \

# Operation
alias \
 ..="cd .." \
 cp="cp -v" \
 mv="mv -v" \
 rm="rm -v" \
 rmd="rmdir -v" \
 mkd="mkdir -pv" \

# Navigation
alias \
 dcc="cd /home/masud/.cache" \
